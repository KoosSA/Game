<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.lessvoid.com/nifty-gui https://raw.githubusercontent.com/nifty-gui/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">

	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />

	<screen id="hud"
		controller="client.HUDScreenController">
		<layer id="layer" backgroundColor="#0000" childLayout="center">
			<panel height="100%" width="100%" align="center"
				valign="center" childLayout="vertical"
				visibleToMouse="false">
				<control id="fps_counter" name="label" text="fps?"
					align="right" valign="top" backgroundColor="#123f" height="50px"
					childLayout="center" width="150px">
				</control>
				<control id="update_counter" name="label" text="fps?"
					align="right" valign="top" backgroundColor="#123f" height="50px"
					childLayout="center" width="150px">
				</control>
				<control id="connected_clients" name="label" text="# Clients connected: ?"
					align="right" valign="top" backgroundColor="#123f" height="50px"
					childLayout="center" width="150px">
				</control>
			</panel>
		</layer>
	</screen>

</nifty>